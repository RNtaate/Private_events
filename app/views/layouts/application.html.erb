<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav>
    <%if signed_in? %>
      <span><%= current_user.name%></span>
      <%= link_to "Create Event", new_event_path%>
      <%= link_to "Show my Invitations", user_path(current_user.id)%>
      <span><%= link_to "log out", new_session_path, method: :delete, data: {confirm: "Are you sure you want to exit?"}%></span>
      <hr>
    <%end%>
  </nav>
  

    <%= yield %>

  </body>
</html>
